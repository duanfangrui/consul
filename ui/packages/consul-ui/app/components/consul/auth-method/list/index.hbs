<ListCollection
  class="consul-auth-method-list"
  @items={{@items}}
as |item|>
  <BlockSlot @name="header">
    <p data-test-auth-method-name>
      {{item.Name}}
    </p>
  </BlockSlot>
  <BlockSlot @name="details">
    <Consul::AuthMethod::Type @item={{item}} />
    <span>{{capitalize item.DisplayName}}</span>
  {{#if (eq item.TokenLocality 'global')}}
    <span class="locality">creates global tokens</span>
  {{/if}}
    <span class="ttl">Max TTL: {{item.MaxTokenTTL}}</span>
  </BlockSlot>
</ListCollection>
